<h2>Edit This Item</h2>
<h2>{{itemDB.item}}</h2>
<span id='category-item' style="display: none;">{{itemDB.category}}</span>
<span id='operation-item' style="display: none;">{{itemDB.operation}}</span>

<form action="/{{itemDB._id}}/item-edit" method="post" enctype="multipart/form-data">
 
  <label for="item-input">
    <p>Item</p>
    <input type="text" name="item" id="item-input" value="{{itemDB.item}}" />
  </label>
  <br>
  <label for="category"><p>Category</p></label>
  <!-- <input type="text" name="category" id="category-input" value="{{category}}" /> -->
  <select name="category" id="category-input">
  <option value="Books">Books</option>
  <option value="Cars">Cars</option>  
  <option value="Clothes">Clothes</option>
  <option value="Computers">Computers/Laptops</option>
  <option value="Electronics">Electronics</option>
  <option value="Furniture">Furniture</option>
  <option value="Toys">Toys</option>
  <option value="Tools">Tools</option>
  <option value="White_Goods">White Goods</option>
  <option value="Others">Others</option>
</select>
  
<br>
 <label>
     <p>Image</p> 
     {{!-- <form action="/upload" > --}}
      <input type="file" name="image" accept="image/png, image/jpg">
     {{!-- </form> --}}
  </label>
<br>

      <p>Description</p> 
        
      <textarea id="description" name="description" rows="8" cols="50">{{itemDB.description}}</textarea>
  
<br>

  <p>Operation</p> 

      <select name="operation" id="operation-input">
        <option value="Donate">Donate</option>
        <option value="Sell">Sell</option>  
        <option value="Exchange">Exchange</option>
      </select>

    <br>

    <input type="text" name="location" placeholder="Location" value="{{itemDB.location}}">
     
    <br> 

  <button type="submit">Save changes</button>

</form>

<script src="/javascripts/dropdownSelector.js"></script>