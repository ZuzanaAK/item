<h4 class="itemHeading">Edit the Item</h4>

<h5 class="itemHeading">{{itemDB.item}}</h5>
<span id='category-item' style="display: none;">{{itemDB.category}}</span>
<span id='operation-item' style="display: none;">{{itemDB.operation}}</span>

<div class="loginForm">

<form action="/{{itemDB._id}}/item-edit" method="post" enctype="multipart/form-data">
<div class="item-form-container">
<div class="form-row item-form-container">
    <div class="form-group col-md-12">
      <label for="inputCity">Item</label>
      <input type="text" class="form-control" name="item" placeholder="Item" value="{{itemDB.item}}">
    </div>
    <div class="form-group col-md-12">
      <label for="inputCity">Location</label>
      <input type="text" class="form-control" name="location" placeholder="Location" value="{{itemDB.location}}">
    </div>
    <div class="form-group col-md-12">
      <label for="inputCity">Description</label>
      <textarea id="description" class="form-control" name="description" rows="8" cols="50" placeholder="Here goes a super cool description of your item...">{{itemDB.description}}</textarea>
    </div>
    <div class="form-group col-md-12">
      <label for="category-input">Category</label>
      <select class="form-control" name="category" id="category-input">
            <option value="Books">Books</option>
            <option value="Cars">Cars</option>  
            <option value="Clothes">Clothes</option>
            <option value="Computers">Computers/Laptops</option>
            <option value="Electronics">Electronics</option>
            <option value="Furniture">Furniture</option>
            <option value="Toys">Toys</option>
            <option value="Tools">Tools</option>
            <option value="White_Goods">White Goods</option>
            <option value="Others">Others</option>
      </select>
    </div>
    <div class="form-group col-md-12">
      <label for="category-input">Operation</label>
      <select class="form-control" name="operation" id="operation-input">
            <option value="Donate">Donate</option>
            <option value="Sell">Sell</option>  
            <option value="Exchange">Exchange</option>
      </select>
    </div>
    <div class="form-group col-md-12">
      <label>Image</label>
      <img src="{{itemDB.image}}" alt="{{itemDB.item}}"/>
      <input type="text" name="existingImage" hidden value="{{itemDB.image}}">
      <input type="file" class="form-control file-upload-button" name="image" accept="image/png, image/jpg">
    
    </div>
  </div>
  </div>
  <div>
    <button id="submit-button" type="submit" class="btn btn-primary">Submit</button>
  </div>
</div>
</div>
</form>

</div>

<script src="/javascripts/dropdownSelector.js"></script>
